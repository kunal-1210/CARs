<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:backgroundTint="@android:color/white"
    android:radius="16dp"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Car Image -->
        <ImageView
            android:id="@+id/imgCar"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"

            android:contentDescription="Car Image"/>

        <!-- Car Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity=""
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Car Name & Model -->
            <TextView
                android:id="@+id/tvCarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Honda Civic"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvCarModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020 Model"
                android:textSize="14sp"
                android:textColor="#666"
                android:paddingBottom="4dp"/>

            <!-- Type, Fuel, Seats (Horizontal Row) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvCarType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sedan"
                    android:textSize="13sp"
                    android:textColor="#00ACC1"/>

                <TextView
                    android:id="@+id/tvFuel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Petrol"
                    android:textSize="13sp"
                    android:textColor="#00ACC1"/>

                <TextView
                    android:id="@+id/tvSeats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5 Seats"
                    android:textSize="13sp"
                    android:textColor="#00ACC1"/>
            </LinearLayout>

            <!-- Owner -->
            <TextView
                android:id="@+id/tvOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner: John Doe"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:paddingBottom="6dp"/>

            <!-- Status + Dates Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvDateRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28 Aug → 30 Aug"
                    android:textSize="14sp"
                    android:textColor="#666"/>
                <TextView
                    android:id="@+id/tvDateRang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28 Aug → 30 Aug"
                    android:textSize="14sp"
                    android:textColor="#666"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Awaiting Pickup"
                android:textStyle="bold"
                android:textColor="#00ACC1"
                android:textAlignment="center"
                android:textSize="19sp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
