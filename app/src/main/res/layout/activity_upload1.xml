<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_upload"
    android:background="#F9F9F9">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section: Car Details -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Details"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <!-- Car Brand -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/car_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Car Brand"
                android:inputType="text"
                android:textColorHint="#888"
                android:textColor="#000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Car Model -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/car_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Car Model"
                android:inputType="text"
                android:textColorHint="#888"
                android:textColor="#000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Per Day Rate -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/per_day_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Per Day Rate"
                android:inputType="numberDecimal"
                android:textColorHint="#888"
                android:textColor="#000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Seats -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/seats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of Seats"
                android:inputType="number"
                android:textColorHint="#888"
                android:textColor="#000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fuel Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fuel Type"
            android:textSize="16sp"
            android:textColor="#555"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/radio_group_fuel_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <RadioButton android:id="@+id/radio_petrol" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Petrol" />
            <RadioButton android:id="@+id/radio_diesel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Diesel" />
            <RadioButton android:id="@+id/radio_cng" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CNG" />
            <RadioButton android:id="@+id/radio_electric" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Electric" />
        </RadioGroup>

        <!-- Vehicle Number Plate -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vehicle_number_plate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vehicle Number Plate"
                android:inputType="text"
                android:textColorHint="#888"
                android:textColor="#000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Verify Car -->
        <Button
            android:id="@+id/verify_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify Car"
            android:backgroundTint="#2196F3"
            android:textColor="#FFF"
            android:layout_marginBottom="16dp" />

        <!-- Transmission Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transmission Type"
            android:textSize="16sp"
            android:textColor="#555"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/transmission_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <RadioButton android:id="@+id/manual_radio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Manual" />
            <RadioButton android:id="@+id/automatic_radio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Automatic" />
        </RadioGroup>

        <!-- Mileage -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mileage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mileage (km)"
                android:inputType="number"
                android:textColorHint="#888"
                android:textColor="#000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Upload Image -->
        <Button
            android:id="@+id/upload_image_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:backgroundTint="#FF9800"
            android:textColor="#FFF"
            android:layout_marginBottom="12dp" />

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="gone"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/image_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="8dp" />
        </HorizontalScrollView>

        <!-- Pick Location -->
        <Button
            android:id="@+id/pick_location_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick Location on Map"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFF"
            android:layout_marginBottom="12dp" />

        <fragment
            android:id="@+id/map_preview"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <!-- Add Car -->
        <Button
            android:id="@+id/add_car_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Car"
            android:backgroundTint="#673AB7"
            android:textColor="#FFF"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
