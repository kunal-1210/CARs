<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ============ ALL YOUR CURRENT CONTENT ============ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Progress Bar -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/progressLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/stepBookingConfirmed"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:background="@drawable/step_circle_active"
                        android:text="Booked"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:padding="4dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        android:layout_marginHorizontal="6dp"
                        app:tint="#4CAF50" />

                    <TextView
                        android:id="@+id/stepAwaitingPickup"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:background="@drawable/step_circle_inactive"
                        android:text="Pickup"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:padding="4dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        android:layout_marginHorizontal="6dp"
                        app:tint="#4CAF50" />

                    <TextView
                        android:id="@+id/stepTripInProgress"
                        android:layout_width="64dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:background="@drawable/step_square_inactive"
                        android:text="In Trip"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:padding="4dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        android:layout_marginHorizontal="6dp"
                        app:tint="#4CAF50" />

                    <TextView
                        android:id="@+id/stepCarReturned"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:background="@drawable/step_circle_inactive"
                        android:text="Returned"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:padding="4dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginBottom="12dp" />

            <!-- Car Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/carImage"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/image_border" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/carName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Honda City 2024"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/carPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹"
                        android:textSize="14sp"
                        android:textColor="#4CAF50" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/bookingSDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15/5/5544"
                            android:textSize="12sp"
                            android:textColor="#666666" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_arrow_back_24" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_arrow_forward_24" />

                        <TextView
                            android:id="@+id/bookingEDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15/5/5544"
                            android:textSize="12sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="4dp">

                        <TextView
                            android:id="@+id/tvDateLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pickup:"
                            android:textSize="12sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tvDateValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15/5/2025 10:00"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- ============ GREY OVERLAY ============ -->
        <LinearLayout
            android:id="@+id/greyOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#80000000"
        android:visibility="gone">

        <TextView
            android:id="@+id/overlayText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Trip Completed"
            android:textColor="#4D4D4D"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"/>
    </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>
